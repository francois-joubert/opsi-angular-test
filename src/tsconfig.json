{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": [ "ES2022", "dom" ],
    "typeRoots": [
      "node_modules/@types"
    ],

    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false, // Too strict for the entire app - consider this for the core model only.
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "removeComments": true
  },

  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "ivyTemplateTypeCheck": true
  }
}
